<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Dashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoLy"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#3B83BD"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/userinfotV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="151dp"
        android:layout_height="153dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="40dp"
        android:onClick="onClickShop"
        android:src="@drawable/shop"
        android:contentDescription="Tienda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoLy" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="128dp"
        android:onClick="onClickProfile"
        android:src="@drawable/profile"
        android:contentDescription="Perfil"
        app:layout_constraintEnd_toStartOf="@id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoLy" />
    <Button
        android:id="@+id/btnInbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bandeja de Entrada"
        android:onClick="onClickExamen"
    app:layout_constraintTop_toBottomOf="@id/imageButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
